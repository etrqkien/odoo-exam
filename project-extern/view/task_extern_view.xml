<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project-base.task_view" model="ir.actions.act_window">
            <field name="name">task view</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">exam.task</field>
            <field name="view_mode">kanban,tree,form</field>

        </record>

        <record id="task_view_kanban" model="ir.ui.view">
            <field name="name">task Kanban</field>
            <field name="model">exam.task</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="tag_ids"/>
                    <field name="priority"/>
                    <field name="user_id"/>
                    <!--<field name="color"/>-->
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-title="record.user_id.value"
                                         t-att-src="kanban_image('res.users', 'image_small', record.user_id.raw_value)"
                                         class="oe_kanban_avatar pull-right"/>
                                </div>
                                <div>
                                    <field name="name"/>
                                </div>
                                <div>
                                    <field name="tag_ids" widget="many2many_tags"/>
                                </div>
                                <div>
                                    <field name="priority" widget="priority" groups="base.group_user"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- Inherit Form View to Modify it -->
        <record id="task_extern_inherit_view" model="ir.ui.view">
            <field name="name">task view</field>
            <field name="model">exam.task</field>
            <field name="inherit_id" ref="project-base.task_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='project_id']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="status"/>
                    <field name="compute_working_status"/>
                    <field name="tag_ids" widget="many2many_tags"/>
                    <field name="priority" widget="priority"/>

                </xpath>
            </field>
        </record>

    </data>
</odoo>
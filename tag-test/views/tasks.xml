<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_kanban_task" model="ir.ui.view">
            <field name="name">view_kanban_task</field>
            <field name="model">exam.tasks</field>
            <field name="arch" type="xml">
                <kanban >
                    <field name="name"/>
                    <filed name="priority"/>
                    <field name="tag_ids"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_content">
                                <div>
                                    <strong>
                                        <a type="open">
                                            <field name="name"/>
                                        </a>
                                    </strong>
                                    <field name="tag_ids"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="view_form_task" model="ir.ui.view">
            <field name="name">view_form_task</field>
            <field name="model">exam.tasks</field>
            <field name="arch" type="xml">
                <form string="My Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="tag_ids"/>
                            <field name="user_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_tasks" model="ir.actions.act_window">
            <field name="name">action_tasks</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">exam.tasks</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p>
                <p>
                </p>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_kaban_project" model="ir.ui.view">
            <field name="name">view_kaban_project</field>
            <field name="model">exam.project</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <field name="name"/>
                                    <strong>
                                        <field name="start_date"/>
                                    </strong>
                                    <br/>
                                    <field name="due_date"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="view_tree_project" model="ir.ui.view">
            <field name="name">view_tree_project</field>
            <field name="model">exam.project</field>
            <field name="arch" type="xml">
                <tree string="my Tree">
                    <field name="name"/>
                    <field name="manager_user_id"/>
                </tree>
            </field>
        </record>
        <record id="view_project_form" model="ir.ui.view">
            <field name="name">view_project_form</field>
            <field name="model">exam.project</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="name"/>
                                <field name="manager_user_id"/>
                                <field name="start_date"/>
                                <field name="due_date"/>
                            </group>
                            <group name="group_right">
                                <sheet>
                                    <field name="task_ids"/>
                                </sheet>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Action -->
        <record id="exam_project_act" model="ir.actions.act_window">
            <field name="name">My Project</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">exam.project</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Tạo project đầu tiên của bạn!
                </p>
            </field>
        </record>
    </data>
</odoo>
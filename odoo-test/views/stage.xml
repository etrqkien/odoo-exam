<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stage_form" model="ir.ui.view">
            <field name="name">view_stage_form</field>
            <field name="model">test.stage</field>
            <field name="arch" type="xml">
                <form string="My Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_stage_tree" model="ir.ui.view">
            <field name="name">view_stage_tree</field>
            <field name="model">test.stage</field>
            <field name="arch" type="xml">
                <tree string="My Tree">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="view_action_stage" model="ir.actions.act_window">
            <field name="name">view_action_stage</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">test.stage</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
                  Create new here
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
                Create new here
              </p>
            </field>
        </record>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="project_view" model="ir.actions.act_window">
            <field name="name">project</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">exam.project</field>
            <field name="view_mode">tree,form,kanban</field>
        </record>
        <record id="project_view_form" model="ir.ui.view">
            <field name="name">project form view</field>
            <field name="model">exam.project</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="start_date"/>
                            <field name="due_date"/>
                            <field name="manager_user_id"/>
                            <field name="task_id">
                                <kanban>
                                    <!--<field name="name"/>-->
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="kanban_task">
                                                <field name="name"/>
                                                <field name="start_date"/>
                                                <field name="due_date"/>

                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
</record>
<record id="project_view_tree" model="ir.ui.view">
<field name="name">project tree view</field>
<field name="model">exam.project</field>
<field name="arch" type="xml">
    <tree>
        <field name="name"/>
        <field name="start_date"/>
        <field name="due_date"/>
        <field name="manager_user_id"/>
        <field name="task_id"/>

    </tree>
</field>
</record>
<record id="project_view_kanban" model="ir.ui.view">
<field name="name">project</field>
<field name="model">exam.project</field>
<field name="arch" type="xml">
    <kanban>
        <field name="name"/>
        <field name="start_date"/>
        <field name="due_date"/>
        <templates>
            <t t-name="kanban-box">
                <div class="oe_kanban_details">
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="due_date"/>
                </div>
            </t>
        </templates>
    </kanban>
</field>
</record>

        </data>
        </odoo>
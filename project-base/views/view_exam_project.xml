<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_tree_exam_project" model="ir.ui.view">
        <field name="name">Exam Project Tree</field>
        <field name="model">exam.project</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="start_date"/>
                <field name="due_date"/>
            </tree>
        </field>

    </record>

    <record id="view_form_exam_project" model="ir.ui.view">
        <field name="name">Exam Project Form</field>
        <field name="model">exam.project</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="manager_user_id"/>
                        <field name="start_date"/>
                        <field name="due_date"/>
                    </group>
                    <notebook>
                        <page string="Danh sách Task">
                            <field name="task_ids" readonly="1">
                                <kanban>
                                    <field name="name"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click">
                                                <h6 style="color: green;">
                                                    <field name="name"/>
                                                </h6>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_kanban_exam_project" model="ir.ui.view">
        <field name="name">Exam Project Kanban</field>
        <field name="model">exam.project</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="start_date"/>
                <field name="due_date"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div>
                                    <h5 style="color: green">
                                        <field name="name"/>
                                    </h5>
                                </div>
                                <div>
                                    <p><i>Ngày bắt đầu: <field name="start_date"/> </i></p>
                                    <p><i>Ngày kết thúc: <field name="due_date"/> </i></p>
                                </div>

                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>

    </record>

</odoo>
<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_tree_exam_task" model="ir.ui.view">
        <field name="name">Exam Task Tree</field>
        <field name="model">exam.task</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <!--<field name="user_id"/>-->
                <field name="start_date"/>
                <field name="due_date"/>
                <!--<field name="project_id"/>-->
            </tree>
        </field>

    </record>

    <record id="view_form_exam_task" model="ir.ui.view">
        <field name="name">Exam Task Form</field>
        <field name="model">exam.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="user_id"/>
                        <field name="start_date"/>
                        <field name="due_date"/>
                        <field name="project_id"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

</odoo>